{
    "plugins": [
        "stylelint-scss"
    ],
    "extends": [
        "stylelint-config-standard-scss"
    ],
    "rules": {
        "indentation": 4,
        "color-function-notation": "modern",
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer"
                ]
            }
        ]
    }
}