{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@msw/*": ["src/msw/*"],
            "@service/*": ["src/service/*"],
            "@model/*": ["src/model/*"],
            "@redux/*": ["src/redux/*"],
            "@error/*": ["src/error/*"]
        },
        "types": ["node", "jset"]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts", "**/*.tsx",
        ".next/types/**/*.ts",
        "tailwind.config.js"
    ],
    "exclude": ["node_modules", "public"]
}
